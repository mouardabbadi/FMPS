<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnfanActivity"
    android:background="@color/back">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:elevation="20dp"
            android:background="@color/secondary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ajouter un Enfant"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="10dp"/>
        </AbsoluteLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <AbsoluteLayout
            android:id="@+id/enfant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_x="9dp"
                android:layout_y="6dp"
                android:text="Informations sur l'enfant :"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/nomtxt"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="11dp"
                android:layout_y="80dp"
                android:background="@drawable/text"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="11dp"
                android:layout_y="150dp"
                android:fontFamily="@font/poppins_light"
                android:text="Genre :"
                android:textColor="@color/primary"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/down"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="11dp"
                android:layout_y="187dp"
                android:background="@drawable/text"
                android:entries="@array/country_array"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="11dp"
                android:layout_y="255dp"
                android:fontFamily="@font/poppins_light"
                android:text="Date de naissance :"
                android:textColor="@color/primary"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/datetime"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="11dp"
                android:layout_y="291dp"
                android:background="@drawable/text"
                android:hint="jj/mm/aaaa"
                android:maxLines="1"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/datetime2"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="210dp"
                android:layout_y="292dp"
                android:background="@drawable/text"
                android:hint="jj/mm/aaaa"
                android:maxLines="1"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="208dp"
                android:layout_y="255dp"
                android:fontFamily="@font/poppins_light"
                android:text="Date de naissance :"
                android:textColor="@color/primary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="214dp"
                android:layout_y="151dp"
                android:fontFamily="@font/poppins_light"
                android:text="Lieu de naissence :"
                android:textColor="@color/primary"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/nomtxt3"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="211dp"
                android:layout_y="188dp"
                android:background="@drawable/text"
                android:maxLines="1" />

            <EditText
                android:id="@+id/nomtxt2"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_x="211dp"
                android:layout_y="80dp"
                android:background="@drawable/text"
                android:maxLines="1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="211dp"
                android:layout_y="41dp"
                android:fontFamily="@font/poppins_light"
                android:text="PrÃ©nom :"
                android:textColor="@color/primary"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="11dp"
                android:layout_y="44dp"
                android:fontFamily="@font/poppins_light"
                android:text="Nom :"
                android:textColor="@color/primary"
                android:textSize="20dp" />

        </AbsoluteLayout>

    </ScrollView>
</RelativeLayout>